pipeline {
    agent any
    stages {
        stage('Git SCM checkout') {
            steps {
                git branch: 'main', credentialsId: 'Mycred', url: 'https://github.com/RiyaSriv1414/studentapp.git'
            }
        }
        stage('MVN package Build') {
            steps {
                bat "mvn clean install"
            }
        }
        stage("build & SonarQube analysis") {
            steps {
              withSonarQubeEnv('SonarQube') {
               -D sonar.login = admin
               -D sonar.password=admin
               -D sonar.projectName = JavaSonar
               -D sonar.projectKey=JavaSonar   
               -D sonar.projectVersion =1.0
               -D sonar.sourceEncoding=UTF-8
               -D sonar.language = java
               -D sonar.sources = src/main/
               -D sonar.host.url = http://localhost:9000
               -D sonar.exclusions = **/*.java
              }
            }
          }
       }
     }
