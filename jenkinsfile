pipeline {
    agent any
    tools{
        maven 'maven'
        jdk  'jdk'
        }            
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                     mvn --version
                     mvn clean package'''
            }
        }
	
	stage ('Build') {
            steps {
                sh 'mvn -Dmaven.test.failure.ignore=true install' 
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        stage('Docker Build') {
            steps {
                script {
                    docker.build("viswamy/studentapprestapi:${TAG}")
                }
            }
        }
	    stage('Pushing Docker Image to Dockerhub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker_credential') {
                        docker.image("viswamy/studentapprestapi:${TAG}").push()
                        docker.image("viswamy/studentapprestapi:${TAG}").push("latest")
                    }
                }
            }
        }
        stage('Deploy'){
            steps {
                sh "docker studentapprestapi | true"
                sh "docker rm studentapprestapi | true"
                sh "docker run --name studentapprestapi -d -p 8080:8080 viswamy/studentapprestapi:${TAG}"
            }
        }
    }
}
