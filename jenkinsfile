pipeline {
    environment {
    registry = "viswamy/studentapp-restapi-docker"
    registryCredential = 'dockerhub'
    dockerImage = ''
    }
    agent any     
    tools{
        maven 'maven'
        }   
    stages {
        stage ('Initialize-maven') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                     mvn --version
                     mvn clean package'''
            }
        }
	
	stage('Building image') {
	   steps{
	   script {
		 dockerImage = docker.build registry + ":$BUILD_NUMBER"
		}
	      }
	    }
               
	    
	  stage('Deploy Image to docker hub') {
	  steps{    
	  script {
	        docker.withRegistry( '', registryCredential ) {
		dockerImage.push()
	      }
	    }
	  }
        }
	stage('Remove Unused docker image') {
	  steps{
	    sh "docker rmi $registry:$BUILD_NUMBER"
	  }
	}
	stage ('Deploy to EKS cluster') {
            steps {
	       sh 'kubectl apply -f studentapp-deployment.yaml'
	       sh 'kubectl set image deployment/studentapp-rest-api studentapp-rest-api=viswamy/studentapp-restapi-docker:${BUILD_NUMBER}'
            }
        }
	 
    }
}
